#upperarm_right_front
upperarm_right_front_old=`cat Qc_old.txt | awk 'NR==13'`
upperarm_right_front_new=`cat Qc_new.txt | awk 'NR==13'`
sed -e "s/$upperarm_right_front_old/$upperarm_right_front_new/" T19 > T20

#forearm_left_back
forearm_left_old=`cat Qc_old.txt | awk 'NR==21'`
forearm_left_new=`cat Qc_new.txt | awk 'NR==21'`
sed -e "s/$forearm_left_old/$forearm_left_new/" T20 > T21

