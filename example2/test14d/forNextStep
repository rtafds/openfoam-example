#!/bin/sh
#===========================================================================#
#
# This program was made by imoan 2016.11.11
# for coupled analysis for CFD and human thermal model.
#
# This program is to change boundary conditions of each segments
# of human body.
#
# This program works with 
#   1) T
#   2) X
#   3) Qc.txt
#   4) Qe.txt
#
#===========================================================================#

#---------------------------------------------------------------------------#
# for T
#---------------------------------------------------------------------------#
cp T T.org
mv T T0

#back_left
back_left_old=`cat Qc_old.txt | awk 'NR==8'`
back_left_new=`cat Qc_new.txt | awk 'NR==8'`
sed -e "s/$back_left_old/$back_left_new/" T0 > T1

#back_right
back_right_old=`cat Qc_old.txt | awk 'NR==7'`
back_right_new=`cat Qc_new.txt | awk 'NR==7'`
sed -e "s/$back_right_old/$back_right_new/" T1 > T2

#chest_left
chest_left_old=`cat Qc_old.txt | awk 'NR==6'`
chest_left_new=`cat Qc_new.txt | awk 'NR==6'`
sed -e "s/$chest_left_old/$chest_left_new/" T2 > T3

#chest_right
chest_right_old=`cat Qc_old.txt | awk 'NR==5'`
chest_right_new=`cat Qc_new.txt | awk 'NR==5'`
sed -e "s/$chest_right_old/$chest_right_new/" T3 > T4

#waist_left_back
waist_left_back_old=`cat Qc_old.txt | awk 'NR==12'`
