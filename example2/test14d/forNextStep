#femur_right_front
femur_right_front_old=`cat Qc_old.txt | awk 'NR==23'`
femur_right_front_new=`cat Qc_new.txt | awk 'NR==23'`
sed -e "s/$femur_right_front_old/$femur_right_front_new/" T11 > T12

