sed -e "s/$waist_right_back_old/$waist_right_back_new/" T6 > T7

#waist_right_front
waist_right_front_old=`cat Qc_old.txt | awk 'NR==9'`
waist_right_front_new=`cat Qc_new.txt | awk 'NR==9'`
sed -e "s/$waist_right_front_old/$waist_right_front_new/" T7 > T8

#femur_left_back
femur_left_back_old=`cat Qc_old.txt | awk 'NR==29'`
femur_left_back_new=`cat Qc_new.txt | awk 'NR==29'`
