#---------------------------------------------------------------------------#
# for X
#---------------------------------------------------------------------------#

cp X X.org
mv X X0

#back_left
back_left_old=`cat Qe_old.txt | awk 'NR==8'`
back_left_new=`cat Qe_new.txt | awk 'NR==8'`
sed -e "s/$back_left_old/$back_left_new/" X0 > X1

#back_right
back_right_old=`cat Qe_old.txt | awk 'NR==7'`
back_right_new=`cat Qe_new.txt | awk 'NR==7'`
sed -e "s/$back_right_old/$back_right_new/" X1 > X2

#chest_left
chest_left_old=`cat Qe_old.txt | awk 'NR==6'`
chest_left_new=`cat Qe_new.txt | awk 'NR==6'`
sed -e "s/$chest_left_old/$chest_left_new/" X2 > X3

#chest_right
