sed -e "s/$lowerleg_right_back_old/$lowerleg_right_back_new/" T14 > T15

#lowerleg_right_front
lowerleg_right_front_old=`cat Qc_old.txt | awk 'NR==25'`
lowerleg_right_front_new=`cat Qc_new.txt | awk 'NR==25'`
sed -e "s/$lowerleg_right_front_old/$lowerleg_right_front_new/" T15 > T16

#upperarm_left_back
upperarm_left_back_old=`cat Qc_old.txt | awk 'NR==19'`
