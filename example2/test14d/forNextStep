sed -e "s/$lowerleg_left_front_old/$lowerleg_left_front_new/" X13 > X14

#lowerleg_right_back
lowerleg_right_back_old=`cat Qe_old.txt | awk 'NR==26'`
lowerleg_right_back_new=`cat Qe_new.txt | awk 'NR==26'`
sed -e "s/$lowerleg_right_back_old/$lowerleg_right_back_new/" X14 > X15

#lowerleg_right_front
lowerleg_right_front_old=`cat Qe_old.txt | awk 'NR==25'`
lowerleg_right_front_new=`cat Qe_new.txt | awk 'NR==25'`
sed -e "s/$lowerleg_right_front_old/$lowerleg_right_front_new/" X15 > X16

#upperarm_left_back
upperarm_left_back_old=`cat Qe_old.txt | awk 'NR==19'`
upperarm_left_back_new=`cat Qe_new.txt | awk 'NR==19'`
sed -e "s/$upperarm_left_back_old/$upperarm_left_back_new/" X16 > X17

#upperarm_left_front
upperarm_left_front_old=`cat Qe_old.txt | awk 'NR==18'`
upperarm_left_front_new=`cat Qe_new.txt | awk 'NR==18'`
sed -e "s/$upperarm_left_front_old/$upperarm_left_front_new/" X17 > X18

#upperarm_right_back
upperarm_right_back_old=`cat Qe_old.txt | awk 'NR==14'`
upperarm_right_back_new=`cat Qe_new.txt | awk 'NR==14'`
sed -e "s/$upperarm_right_back_old/$upperarm_right_back_new/" X18 > X19

#upperarm_right_front
upperarm_right_front_old=`cat Qe_old.txt | awk 'NR==13'`
upperarm_right_front_new=`cat Qe_new.txt | awk 'NR==13'`
sed -e "s/$upperarm_right_front_old/$upperarm_right_front_new/" X19 > X20

#forearm_left_back
